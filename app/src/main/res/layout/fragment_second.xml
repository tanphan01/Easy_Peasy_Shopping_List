    <TextView
        android:id="@+id/tv_Categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/Categories"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_Categories"
        android:layout_margin="@dimen/cat_margin_ext"
        android:weightSum="2">

        <LinearLayout
            android:weightSum="3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/cat"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/cat_margin"
                android:layout_weight="1"
                android:padding="@dimen/cat_padding"
                android:scaleType="centerCrop"
                android:src="@drawable/cat_animals2" />

            <ImageButton
                android:id="@+id/baby"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/cat_margin"
                android:layout_weight="1"
                android:padding="@dimen/cat_padding"
                android:scaleType="fitXY"
                android:src="@drawable/cat_baby" />

            <ImageButton
                android:id="@+id/medoc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="@dimen/cat_padding"
                android:scaleType="fitXY"
                android:src="@drawable/cat_healthcare" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/cat_margin"
            android:layout_height="0dp"/>

        <LinearLayout
            android:weightSum="3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/frozen"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/cat_margin"
                android:layout_weight="1"
                android:padding="@dimen/cat_padding"
                android:scaleType="centerCrop"
                android:src="@drawable/cat_frozen" />

            <ImageButton
                android:id="@+id/cosmetique"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:padding="@dimen/cat_padding"
                android:layout_marginBottom="@dimen/cat_margin"
                android:src="@drawable/cat_skincare"/>

            <ImageButton
                android:id="@+id/household"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:padding="@dimen/cat_padding"
                android:src="@drawable/cat_household"/>
        </LinearLayout>





    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>